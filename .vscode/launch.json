{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon",
      "program": "${workspaceFolder}/src/index.ts",
      "restart": true,
      "console": "integratedTerminal",
      "skipFiles": ["node_modules/**"],
      "outFiles": ["${workspaceRoot}/dist/*.js"],
      "sourceMaps": true,
      "protocol": "inspector"
    }
  ]
}
